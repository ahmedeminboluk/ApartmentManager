@model ApartmentManager.Web.DTOs.CreditCardExpenseDto

@{
    ViewData["Title"] = "Payment";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Ödeme Sayfası</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Payment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Money" class="control-label">Toplam Tutar = @ViewBag.total</label>
                <input type="hidden" asp-for="Money" class="form-control" value="@ViewBag.total" />
            </div>
            <div class="form-group">
                <label asp-for="Owner" class="control-label">Kart Sahibi</label>
                <input asp-for="Owner" class="form-control" />
                <span asp-validation-for="Owner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardNumber" class="control-label">Kart Numarası</label>
                <input asp-for="CardNumber" class="form-control" />
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValidMonth" class="control-label">Geçerlilik Ayı</label>
                <input asp-for="ValidMonth" class="form-control" />
                <span asp-validation-for="ValidMonth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValidYear" class="control-label">Geçerlilik Yılı</label>
                <input asp-for="ValidYear" class="form-control" />
                <span asp-validation-for="ValidYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cvv" class="control-label">Cvv Kodu</label>
                <input asp-for="Cvv" class="form-control" />
                <span asp-validation-for="Cvv" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ExpenseId" class="form-control" value="@ViewBag.id" />
            <div class="form-group">
                <input type="submit" value="Öde" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

